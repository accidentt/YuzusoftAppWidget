<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mLockActivityLayout"
    tools:context=".page.alarm_lock.AlarmLockActivity"
    tools:background="@drawable/senrenbanka_background"
    android:background="@drawable/senrenbanka_background">

    <TextView
        android:id="@+id/mLockTimeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="48sp"
        android:layout_marginTop="16dp"
        tools:text="10:20 am"/>

    <TextView
        android:id="@+id/mLockTipText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:text="@string/long_click_unlock_text"
        app:layout_constraintTop_toBottomOf="@id/mLockTimeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/mCharacterImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/yoshino_icon"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:scaleType="fitEnd"/>

    <ImageView
        android:id="@+id/mLockControlBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        tools:src="@drawable/trophy_27"/>

</androidx.constraintlayout.widget.ConstraintLayout>