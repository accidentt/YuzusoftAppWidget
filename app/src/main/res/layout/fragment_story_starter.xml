<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".page.story.fragments.StoryStarterFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/jinjia_back"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="96dp"
        android:orientation="horizontal"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mStartNewStoryBtn"
            app:backgroundTint="#66000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_new_text"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/mStartStoryFromRecordBtn"
            app:backgroundTint="#66000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="@string/load_record_data_text"/>

    </LinearLayout>

</FrameLayout>